<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
            <img class="img-fluid" src="~/images/slides/1.jpg" alt="Moncton">
            <div class="caption-title">
                <div class="carousel-caption" role="option">
                    <p>
                        Centrally located in Downtown Moncton - A Great Place to Live
                        <a class="btn btn-success" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid" src="~/images/slides/2.jpg" alt="Placement">
            <div class="caption-title">
                <div class="carousel-caption" role="option">
                    <p>
                        90% Grad Placement Rate within 6 months of graduating.
                        <a class="btn btn-success" href="https://go.microsoft.com/fwlink/?LinkID=525030&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="img-fluid" src="~/images/slides/3.jpg" alt="Friends">
            <div class="caption-title">
                <div class="carousel-caption" role="option">
                    <p>
                        Build friendships and relationships that last a lifetime
                        <a class="btn btn-success" href="https://go.microsoft.com/fwlink/?LinkID=525029&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


